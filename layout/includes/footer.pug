#footer-wrap
  #footer-section
    #footer-columns
      each colValue, colLable in theme.footer_text
          .footer-column  
            each secVal,secLab in colValue
              .footer-column-section
                label=secLab
                ul.footer-link
                  each val, lab in secVal
                      li
                        a(href=val)=lab 
    #footer-info
      if theme.footer_copyright
        a.copyright(href=theme.footer_copyright_address)=theme.footer_copyright
      if theme.footer_icp
        a.icp(href=theme.footer_icp_address)=theme.footer_icp
         

