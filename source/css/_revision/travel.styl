
#travel-menu 
    position: fixed;
    bottom: 30px;
    right: 6%;
    color: var(--font-color);
    background-color: var(--card-bg);
    border-radius: 6px ;
    padding: 3px
    +maxWidth600()
        display: none
    label
        margin-right: 10px 

.marker 
        display: block;
        border: 3px solid white ;
        border-radius: 6px;
        cursor: pointer;

.mapboxgl-popup 
        max-width: 200px;

#features
    width: 18%
    margin: 30% 0 0 0;
    overflow-y: scroll;
    z-index: 999;
    +maxWidth600()
        margin-top: 140%
        height: 50%
        width: 100%
    +minWidth2000()
        margin-left: -8% 
        width: 15% 

    section 
        display: inline-block;
        line-height: 10px;
        margin-bottom: 1rem;
        width : 100%;
        height: 200px;
        opacity : .6;
        border-radius: 8px;
        box-shadow: var(--card-box-shadow);
        background-color: var(--card-bg);
        overflow: hidden;
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        color: #a4b0be
        +maxWidth600()
            opacity : 0;
            
        &:last-child 
            border-bottom: none;
            margin-bottom: 200px;
            +maxWidth600()
                 margin-bottom: 5rem
        img
            width: 100%;
            height: 100px;
            border-radius: 8px;
            object-fit: cover;
            box-shadow: 0 0.1rem .4rem rgba(0, 0, 0, .5)
        .year
            position: absolute
            top: 50px
            right: 10px
            color #fff
            font-size: 3em
            font-weight: bolder
        .section-info
            margin: 20px
            a
                font-size: 1em;
                color: var(--font-color)
    .active
        opacity : 0.99
        transition: opacity 1s linear;
        .section-info
            a 
                font-size: 1.4em;
                font-weight: bolder
                i
                    color: #f39c12

        